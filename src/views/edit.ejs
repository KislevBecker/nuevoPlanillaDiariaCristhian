<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="Plantel" value="<%= task.title %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="title2" placeholder="Nombre empleado" value="<%= task.title2 %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="date" name="title3" value="<%= task.title3 %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="time" name="Hin" value="<%= task.Hin %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="time" name="Hout" value="<%= task.Hout %>">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" cols="80"
                placeholder="Ingrese comentario"
                ><%= task.description %></textarea>
            </div>
            <button class="btn btn-primary" type="submit">
              Actualizar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>
